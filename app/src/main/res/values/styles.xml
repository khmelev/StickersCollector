<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TabLayout">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubheadLight" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SmallLight" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/almostWhite1</item>
    </style>

    <style name="Medium" parent="TextAppearance.AppCompat.Medium">
    </style>

    <style name="Body1Light" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/almostWhite1</item>
    </style>

    <style name="FAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="Widget.Card" parent="android:Widget">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">16dp</item>
        <item name="contentPaddingTop">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <style name="EditTitle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

</resources>
